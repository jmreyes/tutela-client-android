<resources>

<!--    &lt;!&ndash; Base application theme. &ndash;&gt;
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
    </style>-->
    <style name="list">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="list_item_tile">
        <item name="android:layout_height">72dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="list_item_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="list_item_subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="text_header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="text_caption">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="text_body">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="separator">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="CircularThemeProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="cpb_color">@color/cpb_default_color</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <!--styling color for arrow-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="navigation_drawer_username">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="navigation_drawer_email">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="navigation_drawer_section_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/background_item_navigation_drawer</item>
    </style>

    <style name="navigation_drawer_section_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">@color/button_material_dark</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="navigation_drawer_section_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

</resources>
