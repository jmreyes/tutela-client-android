<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadingLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminate="true"
        android:theme="@style/CircularThemeProgressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/loadingLayoutRetryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/loading_layout_retry"
            android:visibility="gone" />

    <TextView
            android:id="@+id/loadingLayoutErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/loadingLayoutRetryButton"
            android:layout_centerHorizontal="true"
            android:text="@string/loading_layout_network_error"
            android:visibility="gone"/>

</RelativeLayout>